generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://menu_user:testpassword@localhost:5432/menu_dev"
}

model Venue {
  id        String     @id @default(uuid())
  name      String
  address   String
  menuItems MenuItem[]
}

model MenuItem {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  category    String   // 'drink' or 'shisha'
  isActive    Boolean  @default(true) // true = available, false = not available
  venueId     String
  venue       Venue    @relation(fields: [venueId], references: [id])
}