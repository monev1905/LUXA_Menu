generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://menu_user:testpassword@localhost:5432/menu_dev"
}

model Drink {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  section     String?
  isActive    Boolean  @default(true)
}

model ShishaFlavor {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  brand       String
  type        String   // 'blond' or 'black'
  isActive    Boolean  @default(true)
}