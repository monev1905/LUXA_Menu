generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Drink {
  id          String  @id @default(uuid())
  name        String
  description String?
  price       Float
  isActive    Boolean @default(true)
  category    String
  type        String
}

model ShishaFlavor {
  id          String  @id @default(uuid())
  name        String
  description String?
  price       Float
  brand       String
  type        String
  isActive    Boolean @default(true)
  category    String
}

model Venue {
  id       String  @id @default(uuid())
  name     String
  address  String
  phone    String
  mapUrl   String
  subtitle String?
}
